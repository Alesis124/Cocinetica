<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ECEAE1"
    android:padding="10dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receta1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hecho por persona1"
            android:textStyle="italic" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/txtGuardar"
                android:text="Guardar"
                android:textColor="#70B657"
                android:background="?attr/selectableItemBackground"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/txtVer"
                android:text="Ver"
                android:textColor="#70B657"
                android:background="?attr/selectableItemBackground"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgReceta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="#DDD"
        android:contentDescription="Imagen de receta"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />
</LinearLayout>
